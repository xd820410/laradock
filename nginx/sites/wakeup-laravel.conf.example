server {
    listen 443 ssl;
    listen [::]:443 ssl;
    ssl_certificate /etc/nginx/ssl/auto-redeem.wakeup-design.shop.crt;
    ssl_certificate_key /etc/nginx/ssl/auto-redeem.wakeup-design.shop.key;

    server_name auto-redeem.wakeup-design.shop;

    location / {
        proxy_ssl_name "auto-redeem.wakeup-design.shop";
        proxy_ssl_server_name on;
        proxy_pass https://auto-redeem.wakeup-design.shop:4433;
        # proxy_redirect https://test.uv100.com:4433/;
        proxy_read_timeout 3600;
        proxy_ssl_certificate /etc/nginx/ssl/auto-redeem.wakeup-design.shop.crt;
        proxy_ssl_certificate_key /etc/nginx/ssl/auto-redeem.wakeup-design.shop.key;

        # 把 IP、Protocol 等 header 都一起送給反向代理的 server
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $http_x_forwarded_proto;
        proxy_set_header Host $host;

        error_log /var/log/nginx/nginx_proxy_error.log;
        access_log /var/log/nginx/nginx_proxy_access.log;
    }
}

